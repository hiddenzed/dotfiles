[module/time]

type = internal/date
interval = 1

; Format for date
; date = " %Y/%m/%d"
date = " %d %B, %Y | "
date-alt = " %A, %d %B, %Y | "

; Format for time
time = %H:%M
time-alt = %H:%M:%S

format-prefix            = ""
format-prefix-foreground = ${colors.second-color}
format-prefix-background = ${colors.first-color}
format-prefix-font       = 2

label            = "%date% %time% "
label-foreground = ${colors.text-color}


